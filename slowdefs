# definitions for the slow movie stuff

MOVIE_LIB=$HOME/lib/slow_movies
MOVIE_CATALOG=$MOVIE_LIB/catalog

MOVIE_URL="http://slowmovies.cheswick.com"
MOVIE_LIST_URL="$MOVIE_URL/index"
MOVIE_CATALOG_URL=$MOVIE_URL/catalog

CURRENT_MOVIE=$MOVIE_LIB/current_movie		# index in MOVIE_LIST, starting at 1*
CURRENT_REEL=$MOVIE_LIB/current_reel
CURRENT_FRAME=$MOVIE_LIB/current_frame

MOVIE_URL="http://slowmovies.cheswick.com/"
MOVIE_INDEX=$MOVIE_URL/index
MOVIE_CATALOG=$MOVIE_URL/catalog
